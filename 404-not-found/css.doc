//Variables
$font-stack: "Space Mono", serif;
$primary-color: #333333;
$secondary-color: #4f4f4f;

//Mixins
@mixin mobile($width: 375px) {
  @media screen and (max-width: $width) {
    @content;
  }
}
* {
  margin: 0;
  border: 0;
  padding: 0;
}
body {
  width: 100%;
  font-size: 16px;
  border: 1px solid blue;
  @include mobile(375px) {
    height: 949px;
    padding: 24px;
  }
}
.grid-container {
  display: flex;
  width: 100%;
  justify-content: space-between;
  justify-self: center;
  border: 1px solid red;
  @include mobile(375px) {
    display: block;
  }
}
header {
  @include mobile(375px) {
    h3 {
      font-size: 23px;
      font-style: normal;
      font-weight: bold;
      line-height: 25px;
      text-transform: uppercase;
      color: $primary-color;
    }
  }
}
.scarecrow-image {
  img {
    width: 100%;
    height: 100%;
  }
  @include mobile(375px) {
    height: 240px;
    width: 100%;
    display: flex;
    justify-content: space-around;
    img {
      width: 290px;
    }
  }
}
.warning {
  font-size: 250%;
  line-height: 95px;
  letter-spacing: -0.035em;
  color: $primary-color;
  font-style: normal;
  font-weight: bold;
  p {
    font-size: 24px;
    line-height: 36px;
    font-weight: normal;
    letter-spacing: -0.035em;
    color: $secondary-color;
  }
  @include mobile(375px) {
    h1 {
      font-size: 46px;
      line-height: 60px;
    }
    p {
      font-size: 18px;
      line-height: 27px;
    }
  }
}
button {
  @include mobile(375px) {
    width: 216px;
    height: 68px;
    background: $primary-color;
    color: #ffffff;
    font-size: 16px;
    line-height: 21px;
    letter-spacing: -0.035em;
  }
}
